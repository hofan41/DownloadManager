<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{downloadName}}</h3>
        </div>
        <div class="panel-body">
            {{#if download.Metadata.description}}
            <p>{{download.Metadata.description}}</p>
            {{else}}
            <p><i>No description provided.</i></p>
            {{/if}}
        </div>
    </div>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-success">
            <div class="panel-heading" id="fileUploadHeading">
                <h3 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseFileUpload" aria-expanded="false" aria-controls="collapseFileUpload">Upload File</a></h3>
            </div>
            <div id="collapseFileUpload" class="panel-collapse collapse" role="tabpanel" aria-labelledby="fileUploadHeading">
                <div class="panel-body">
                    <form class="form-inline" action="/download/{{downloadName}}/api/signedPut">
                        <div class="form-group">
                            <input type="file" id="uploadFile">
                            <p class="help-block">Select a file to upload for {{downloadName}}.</p>
                        </div>
                        <button type="submit" class="btn btn-default" id="uploadFileButton">Upload</button>
                    </form>
                    <div class="progress collapse" id="uploadFileProgress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100">
                            <span class="sr-only">0% Complete</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Files</h3>
        </div>
        <div class="panel-body">
            <table id="downloadFileList" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            <button type="button" class="btn btn-default" disabled><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                        </th>
                        <th>Name</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!-- Need to expose downloadName to javascript -->
<script>
var internals = {};
internals.downloadName = '{{{downloadName}}}';
</script>