<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{downloadName}}</h3>
        </div>
        <div class="panel-body">
            {{#if download.Metadata.description}}
            <p>{{download.Metadata.description}}</p>
            {{else}}
            <p><i>No description provided.</i></p>
            {{/if}}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Upload File</h3>
        </div>
        <div class="panel-body">
            <form class="form-inline" action="/api/download/{{downloadName}}/signedPut">
                <div class="form-group">
                    <input type="file" id="uploadFile">
                    <p class="help-block">Select a file to upload for {{downloadName}}.</p>
                </div>
                <button type="submit" class="btn btn-default" id="uploadFileButton">Upload</button>
            </form>
            <div class="progress collapse" id="uploadFileProgress">
                <div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100">
                    <span class="sr-only">0% Complete</span>
                </div>
            </div>
        </div>
    </div>
</div>