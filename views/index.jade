extends layout

block content
    .container
        if accessRights.download
            if breadcrumbs
                ul.breadcrumb
                    each crumb, index in breadcrumbs
                        if index == breadcrumbs.length - 1
                            li.active
                                | 
                                | #{crumb.name}
                                | 
                        else
                            li
                                | 
                                a(href="#{crumb.link}") #{crumb.name}
                                | 
            .panel.panel-default
                .panel-heading
                    h3.panel-title #{tableHeading}
                .panel-body
                    block preTableContent
                    table#downloadList.table.table-striped.table-bordered
                        thead
                            tr
                                each column in columns
                                    th #{column}
        else
            .panel.panel-danger
                .panel-heading
                    h3.panel-title 
                        span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
                        |  Restricted Access
                .panel-body
                    p Please login.